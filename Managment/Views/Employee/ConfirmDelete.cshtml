@model Employee

<h1> Are you sure to delete <span class="text-danger">@Model.Name</span>?</h1>

<form method="post" asp-action="ConfirmDelete">

    @Html.HiddenFor(m => m.EmployeeId)
    <input type="submit" value="Sure, Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a> 

</form>
